#include <iostream>
using namespace std;

class Student {
private:
    int roll;
    string name;

public:
    void input() {
        cout << "Enter Roll: ";
        cin >> roll;
        cout << "Enter Name: ";
        cin >> name;
    }

    void display() {
        cout << "\nStudent Details:\n";
        cout << "Roll: " << roll << endl;
        cout << "Name: " << name << endl;
    }
};

int main() {
    Student s;
    s.input();
    s.display();
    return 0;
}
